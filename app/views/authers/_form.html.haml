= form_for(@auther) do |f|
  - if @auther.errors.any?
    #error_explanation
      %h2
        = pluralize(@auther.errors.count, "error")
        prohibited this author from being saved:
      %ul
        - @auther.errors.full_messages.each do |message|
          %li= message
  %div
    = f.label :first_name
    %br
    = f.text_field :first_name
    %br
  %div
    = f.label :last_name
    %br
    = f.text_field :last_name
    %br
  %div
    = f.label :date_of_birth
    %br
    = f.date_field :date_of_birth
    %br
  %br
  %br
  .actions
    = f.submit
