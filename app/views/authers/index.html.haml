%p#notice= notice
%h1 Listing Author
%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Date Of Birth
      %th{:colspan => "3"}
        Action
  %tbody
    - if @authers.present?
      - @authers.each do |auther|
        %tr
          %td= auther.first_name
          %td= auther.last_name
          %td= auther.date_of_birth
          %td
            = link_to 'Show', auther
            = link_to 'Edit', edit_auther_path(auther)
            = link_to 'Destroy', auther, method: :delete, data: { confirm: 'Are you sure?' }
    - else
      %tr
        %td= "No Records."
%br/
= link_to 'New Author', new_auther_path
